<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="k_sale_diff_report_wizard" model="ir.ui.view">
        <field name="name">k_pos_diff_report_wizard</field>
        <field name="model">sale.order.report.diffs</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" />
                        </group>
                        <group>
                            <field name='date_from' />
                            <field name='date_to' />
                        </group>
                    </group>
                    <footer>
                        <button type="object" string="Print" name="action_print_difference_report" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="k_sale_diff_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Difference Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.report.diffs</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref='k_sale_diff_report_wizard' />
    </record>

    <!-- Reporting menu -->
    <menuitem id="menu_sale_diff_rep" name="Sale Price Difference" parent="sale.menu_sale_report" sequence="100" action="k_sale_diff_report_wizard_action" groups="point_of_sale.group_pos_manager" />

</odoo>